<div class="row">
    <div class="col-6">
        <h1 class="float-left">Scheduled Tweets</h1>
    </div>
</div>

<!-- horizontal line -->
<hr />

<!-- pagination -->
<div class="row mb-4">
    <div class="col-6">
        <div class="d-flex justify-content-start">
            <%= will_paginate @posts, list_classes: %w(pagination justify-content-end) %>
        </div>
    </div>
    <div class="col-6">
         <%= link_to new_scheduled_tweet_path, :class => "float-right btn btn-primary shadow-sm"  do %>
            <i class="fas fa-plus fa-sm text-white-50"></i> Create Schedule
        <% end %>
    </div>
</div>

<!-- table data -->
<table class="table table-striped table-bordered mb-4">
    <thead>
        <tr>
            <th class="text-center">ID</th>
            <th class="text-center">Status</th>
            <th class="text-center">Content</th>
            <th class="text-center" colspan="2">DATE AND TIME</th>
            <th class="text-center" colspan="4"></th>
        </tr>
    </thead>
    <tbody>
        <% @scheduled_tweets.each do |scheduled_tweet| %>
        <tr>
            <td><%= scheduled_tweet.id %></td>
            <td><%= ScheduledTweet::schedule_status[scheduled_tweet.status] %></td>
            <td><%= scheduled_tweet.content %></td>
            <td><%= scheduled_tweet.scheduled_date %></td>
            <td><%= scheduled_tweet.scheduled_time.to_s(:time) %></td>
            <td>
                <%= link_to 'SHOW', scheduled_tweet, :class=> "btn btn-info btn-sm" %>
            </td>
            <td>
                <%= link_to 'EDIT', edit_scheduled_tweet_path(scheduled_tweet), :class=> "btn btn-dark btn-sm" %>
            </td>
            <td>
                <%= button_to 'DESTROY', scheduled_tweet, :class=> "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
            <td>
                <%= button_to '/scheduled_tweets/send', :class=> "btn btn-primary btn-sm", method: :post, params: { tweet_id: scheduled_tweet.id } do%>
                    SEND
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<!-- pagination -->
<div class="row">
    <div class="col-6">
        <div class="d-flex justify-content-start">
            <%= will_paginate @posts, list_classes: %w(pagination justify-content-end) %>
        </div>
    </div>
    <div class="col-6"></div>
</div>