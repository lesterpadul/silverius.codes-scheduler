<div class="row">
    <div class="col-6">
        <h1 class="float-left">Scheduled Emails</h1>
    </div>
</div>

<!-- horizontal line -->
<hr />

<!-- pagination -->
<div class="row mb-4">
    <div class="col-6">
        <div class="d-flex justify-content-start">
            <%= will_paginate @posts, list_classes: %w(pagination justify-content-end) %>
        </div>
    </div>
    <div class="col-6">
         <%= link_to new_scheduled_email_path, :class => "float-right btn btn-primary shadow-sm"  do %>
            <i class="fas fa-plus fa-sm text-white-50"></i> Create Schedule
        <% end %>
    </div>
</div>

<table class="table table-striped table-bordered mb-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Subject</th>
            <th>Content text</th>
            <th>Content html</th>
            <th>Repeating event</th>
            <th>Scheduled date</th>
            <th>Scheduled time</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @scheduled_emails.each do |scheduled_email| %>
        <tr>
            <td><%= scheduled_email.id %></td>
            <td><%= scheduled_email.status %></td>
            <td><%= scheduled_email.subject %></td>
            <td><%= scheduled_email.content_text %></td>
            <td><%= scheduled_email.content_html %></td>
            <td><%= scheduled_email.repeating_event %></td>
            <td><%= scheduled_email.scheduled_date %></td>
            <td><%= scheduled_email.scheduled_time %></td>
            <td><%= link_to 'Show', scheduled_email, :class=> "btn btn-info btn-sm"%></td>
            <td><%= link_to 'Edit', edit_scheduled_email_path(scheduled_email), :class=> "btn btn-primary btn-sm" %></td>
            <td><%= button_to 'Destroy', scheduled_email, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger btn-sm" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<!-- pagination -->
<div class="row">
    <div class="col-6">
        <div class="d-flex justify-content-start">
            <%= will_paginate @posts, list_classes: %w(pagination justify-content-end) %>
        </div>
    </div>
    <div class="col-6"></div>
</div>
