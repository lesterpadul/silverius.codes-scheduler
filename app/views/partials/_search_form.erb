<!-- main body-->
<div class="card mb-4">
    <div class="card-body">
        <form action="" method="GET">
            <div class="row">
                <div class="form-group col-6">
                    <label for="" class="badge bg-primary p-2 fs-2 bg-normal-text rounded-0">Subject</label>
                    <input type="text" class="form-control" name="subject" value="<%= params[:subject] %>">
                </div>
                <div class="form-group col-6">
                    <label for="" class="badge bg-primary p-2 fs-2 bg-normal-text rounded-0">Status</label>
                    <select name="status" id="" class="form-control">
                        <option value="">---</option>
                        <% ScheduledEmail.schedule_status.each do |index, status| %>
                        <option value="<%= index %>" <%= index.to_s == params[:status]  ? "selected" : "" %>>
                            <%= status %>
                        </option>
                        <% end %>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-4" style="display: none;">
                    <label for="" class="badge bg-primary p-2 fs-2 bg-normal-text rounded-0">Date</label>
                    <input type="date" class="form-control" name="scheduled_date" value="<%= params[:scheduled_date] %>">
                </div>
                <div class="form-group col-4" style="display: none;">
                    <label for="" class="badge bg-primary p-2 fs-2 bg-normal-text rounded-0">Time</label>
                    <input type="time" class="form-control" name="scheduled_time" value="<%= params[:scheduled_time] %>">
                </div>
                <div class="form-group col-12">
                    <button class="btn btn-primary float-right rounded-0">
                        <i class="fas fa-search"></i>&nbsp;Search
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>